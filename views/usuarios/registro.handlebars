{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Crie sua conta hoje: </h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" class="form-control" required="true">
            <label for="email">Emal: </label>
            <input type="email" name="email" class="form-control" required="true">
            <label for="senha">Senha: </label>
            <input type="password" name="senha" class="form-control" required="true">
            <label for="senha2">Repita a sua senha: </label>
            <input type="password" name="senha2" class="form-control" required="true">
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>